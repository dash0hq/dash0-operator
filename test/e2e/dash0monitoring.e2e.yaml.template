apiVersion: operator.dash0.com/v1beta1
kind: Dash0Monitoring
metadata:
  name: dash0-monitoring-resource-e2e
spec:
  instrumentWorkloads:
    mode: {{ .InstrumentWorkloadsMode }}
{{- if .InstrumentWorkloadsLabelSelector }}
    labelSelector: {{ .InstrumentWorkloadsLabelSelector }}
{{- end }}
{{- if .Endpoint }}
  exports:
    - dash0:
        endpoint: {{ .Endpoint }}
        authorization:
          token: {{ .Token }}
{{- end }}
{{- if .Filter }}
  filter:
  {{- .Filter | indent 4 -}}
{{- end }}
{{- if .Transform }}
  transform:
  {{- .Transform | indent 4 -}}
{{- end }}
{{- if .PrometheusScrapingEnabled }}
  prometheusScraping:
    enabled: {{ .PrometheusScrapingEnabled }}
{{- end }}
