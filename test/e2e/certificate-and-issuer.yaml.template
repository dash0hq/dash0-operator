apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: e2e-serving-certificate
  labels:
    app.kubernetes.io/name: certificate
    app.kubernetes.io/instance: serving-cert
    app.kubernetes.io/component: certificate
spec:
  dnsNames:
  - e2e-webhook-service-name.{{ .OperatorNamespace }}.svc
  - e2e-webhook-service-name.{{ .OperatorNamespace }}.svc.cluster.local
  issuerRef:
    kind: Issuer
    name: e2e-issuer
  secretName: e2e-certificate-secret
---
apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: e2e-issuer
  labels:
    app.kubernetes.io/name: certificate
    app.kubernetes.io/instance: serving-cert
    app.kubernetes.io/component: certificate
spec:
  selfSigned: {}
