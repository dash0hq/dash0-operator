ARG base_image="golang:1.23.7-bookworm"
FROM --platform=${BUILDPLATFORM} ${base_image}

WORKDIR /workspace

COPY go.mod .
COPY go.sum .

RUN go mod download

COPY main.go .

ARG TARGETOS
ARG TARGETARCH

RUN GOOS=${TARGETOS:-linux} GOARCH=${TARGETARCH} go build -v -buildmode=pie -ldflags '-s -w' -o staticallybuiltapp .

