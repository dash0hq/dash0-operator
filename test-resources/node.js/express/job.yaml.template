apiVersion: batch/v1
kind: Job
metadata:
  name: dash0-operator-nodejs-20-express-test-job
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: dash0-operator-nodejs-20-express-test-job-app
          image: "dash0-operator-nodejs-20-express-test-app:latest"
          env:
            - name: PORT
              value: "1208"
            - name: DASH0_DEBUG
              value: "true"
            - name: TRIGGER_SELF_AND_EXIT
              value: "true"
          ports:
            - containerPort: 1208
          imagePullPolicy: Never
